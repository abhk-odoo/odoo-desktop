{
  "name": "odoo_desktop",
  "version": "1.0.0",
  "productName": "Odoo Desktop",
  "description": "A full desktop application for accessing Odoo in a secure and native environment",
  "license": "ISC",
  "type": "module",
  "main": "app/main/main.js",
  "author": {
    "name": "Odoo S.A.",
    "email": "support@odoo.com"
  },
  "scripts": {
    "start": "electron .",
    "clean": "node build.js clean",
    "build-win": "node build.js win",
    "build-linux": "node build.js linux",
    "build-mac": "node build.js mac"
  },
  "build": {
    "appId": "com.odoo.desktop",
    "productName": "Odoo Desktop",
    "icon": "app/assets/icon.png",
    "directories": {
      "output": "dist"
    },
    "files": [
      "app/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "build",
        "to": "build"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Business"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "Business"
    }
  },
  "devDependencies": {
    "electron": "^39.2.2",
    "electron-builder": "^26.0.12",
    "rimraf": "^6.1.0"
  },
  "dependencies": {
    "electron-store": "^11.0.2"
  }
}